                        <div class="dots-menu-inner">
                       
                           <div class="dots-links">
                           <img src="./assets/update-posts.png" class="dots-icon">
                           <a href="#">Edit</a>
                           </div>
       
                           <div class="dots-links">
                           <img src="./assets/delete.png" class="dots-icon">
                           <a href="#">Delete</a>
